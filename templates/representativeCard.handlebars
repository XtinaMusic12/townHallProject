<div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
  <div class="card card-representative {{party}}">
    <div class="card-header">
      <div class="row">
        <div class="col-xs-4 col-sm-3 no-padding p-0">
          {{!-- {{#if missingMember}}
            <a href="https://jacksonmaxfield.github.io/flyer_gen/#/m={{id}}" target="_blank"
               title="Print a milk-carton like poster for your Missing Member of Congress.">
              <div class="missing-member weight-heavy">Missing Member</div>
            </a>
          {{/if}} --}}
          <img src="https://www.govtrack.us/data/legislator-photos/photos/{{govtrack_id}}-100px.jpeg" onerror="$(this).remove()" class="grayscale" />
        </div>
        <div class="col-xs-8 col-sm-9">
          {{#if pledged}}
            <div class="col-sm-9">
              <h3>{{formattedMember}}</h3>
              <h4>{{party}}</h4>
            </div>
            <div class="col-sm-3">
              <a href="https://www.townhallpledge.com/" target="_blank" class="logo logo-right pledger-logo pledger-logo-rep-card"></a>
            </div>
          {{/if}}
          {{#unless pledged}}
              <h3>{{formattedMember}}</h3>
              <h4>{{party}}</h4>
          {{/unless}}
        </div>
      </div>
    </div>
    <div class="card-block">
      <div class="card-text row">
        <div class="col-xs-12 col-sm-6 no-padding p-0">
          {{#if electionYear}}<div><label>Next election:</label> {{electionYear}}</div>{{/if}}
          {{#if phone}}<div><label>Phone:</label> {{phone}}</div>{{/if}}
          {{#if fax}}<div><label>Fax:</label> {{fax}}</div>{{/if}}
        </div>
        <div class="social-icons col-xs-12 col-sm-6 no-padding p-0 text-right">
          {{#if twitter_canon}}
            <a href="//twitter.com/{{twitter_canon}}" class="social-icon" target="_blank">
              <i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i>
            </a>
          {{/if}}
          {{#if facebook_canon}}
            <a href="//facebook.com/{{facebook_canon}}" class="social-icon" target="_blank">
              <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i>
            </a>
          {{/if}}
          {{#if oc_email}}
            <a href="mailto:{{oc_email}}" class="social-icon">
              <i class="fa fa-envelope-square fa-2x" aria-hidden="true"></i>
            </a>
          {{/if}}
          {{#if contact_form}}
            <a href="{{contact_form}}" class="social-icon" target="_blank">
              <i class="fa fa fa-external-link-square fa-2x" aria-hidden="true"></i>
            </a>
          {{else if domain}}
            <a href="{{domain}}" class="social-icon" target="_blank">
              <i class="fa fa fa-external-link-square fa-2x" aria-hidden="true"></i>
            </a>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="mm card-footer no-padding container-flex">
        <div class="row">
          <div class="footer-icon type-holder col-4 vertical-align ">
            {{#if next_election}}
            <div class="footer-text"><small>Term ends:</small> <span class="highlight">{{next_election}}</span></div>{{/if}}
          </div>
          <div class="footer-icon type-holder col-4 vertical-align ">
            {{#if taxBill}}
            <div class="footer-text"><small>Voted for</small> <span class="highlight">2017 Tax Bill</span></div>{{/if}}
          </div>
          <div class="footer-icon  col-4">
            {{#if ahca}}<div class="footer-text ahca-text  vertical-align">
              <small>Voted for </small><span class="highlight">AHCA</span></div>{{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
